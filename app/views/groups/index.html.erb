<h1>My Group List</h1>

<table class = "table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Icon</th>
      <th>More Info</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @groups.where(:user => current_user).each do |group| %>
      <tr>
        <td><%= group.name %></td>
        <td><%= image_tag group.group_icon.url(:thumb) %></td>
        <td><%= link_to 'Show', group %></td>
        <td><%= link_to 'Edit', edit_group_path(group) %></td>
        <td><%= link_to 'Delete', group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

